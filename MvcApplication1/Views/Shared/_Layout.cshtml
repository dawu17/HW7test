                            </ul>
						</li>
					</ul>
				</li>
				<li>@Html.ActionLink("ClientSide Demos", "GetinputPage")</li>
                <li>@Html.ActionLink("ServerSide Demos", "ServersideDemo")</li>
				<li>@Html.ActionLink("About Myself", "Aboutme")</li>
			</ul>
		</div>


        </nav>

    </header>

